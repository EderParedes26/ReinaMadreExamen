<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_background"
    tools:context=".RegistroAdmin">

    <EditText
        android:id="@+id/aMaterno"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Apellido Paterno"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/aPaterno"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/contras"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="ContraseÃ±a"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/aMaterno"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/aPaterno"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Apellido Paterno"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/nombre"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="411dp"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_weight="1"
        android:onClick="registrar"
        android:text="Registrar"
        app:layout_constraintTop_toBottomOf="@+id/contras"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Registrar Administrador"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="26dp" />
</androidx.constraintlayout.widget.ConstraintLayout>